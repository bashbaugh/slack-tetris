datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model TwoPlayerGame {
  id            Int     @id @default(autoincrement())
  offerTs       String
  channel  String
  user          String
  opponent      String
  winner        String?
}

model Score {
  id        Int         @id @default(autoincrement())
  datetime  DateTime    @default(now())
  user      String
  score     Int         @default(0)

  @@index([score])
}

